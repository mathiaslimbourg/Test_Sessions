<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <request-character-encoding>UTF-8</request-character-encoding>
    <response-character-encoding>UTF-8</response-character-encoding>

    <servlet>
        <display-name>TestDrieServlet</display-name>
        <servlet-name>TestDrieServlet</servlet-name>
        <servlet-class>be.intecbrussel.webcomponents.TestDrieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestDrieServlet</servlet-name>
        <url-pattern>/testdrie</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>LogOutServlet</display-name>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>be.intecbrussel.webcomponents.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>



</web-app>